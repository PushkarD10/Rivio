<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="6dp"
    android:background="#1E1E1E">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:layout_margin="18dp"
            android:clickable="true"
            android:focusable="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="16dp"
                >
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_whereto" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="Plus Jakarta Sans"
                    android:textSize="20sp"
                    android:textColor="#FCC32C"
                    android:text="Where to?"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="3dp"
                    />
            </LinearLayout>
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:paddingLeft="26dp"
            android:paddingRight="26dp"
            android:paddingTop="16dp"
            android:paddingBottom="20dp">

            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:layout_marginLeft="13dp"
                android:background="@drawable/ny_ic_homewhite"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:fontFamily="Plus Jakarta Sans"
                android:textSize="17sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp"
                android:text="Home"
                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="16dp"
            android:paddingBottom="20dp">

            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:layout_marginLeft="11dp"
                android:background="@drawable/ny_ic_workwhite"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:fontFamily="Plus Jakarta Sans"
                android:textSize="17sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp"
                android:text="Work"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingTop="16dp"
            android:paddingBottom="20dp">

            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/ny_ic_heart"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:fontFamily="Plus Jakarta Sans"
                android:textSize="17sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="6dp"
                android:text="Favourites"
                />
        </LinearLayout>


    </LinearLayout>
    </LinearLayout>

</LinearLayout>