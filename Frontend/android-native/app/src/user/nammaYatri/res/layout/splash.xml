<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/ny_ic_splash_bg"
    android:id="@+id/splash">
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/splash_lottie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_autoPlay="true"
        app:lottie_repeatMode="restart"
        app:lottie_rawRes="@raw/splash_lottie"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="14dp"
            android:fontFamily="@font/plus_jakartasans_medium"
            android:alpha="0.7"
            android:text="India's 1st ever"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="60dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Commission"
                android:textSize="14dp"
                android:fontFamily="@font/plus_jakartasans_medium"
                android:textColor="#FFFFFF"/>
            <LinearLayout
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:layout_gravity="bottom"
                android:background="@drawable/round_circle"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/plus_jakartasans_medium"
                android:textSize="14dp"
                android:text="Open Mobility App"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>