<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingVertical="5dp"
            android:visibility="gone"
            android:id="@+id/message_view_left">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="New Ride assigned"
                android:gravity="center"
                android:textColor="@color/white"
                android:paddingRight="20dp"
                android:background="@drawable/bubble_message_shape_left"
                android:paddingLeft="10dp"
                android:id="@+id/messageTextView_left" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right">

            <ImageView
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@drawable/ny_ic_floating_widget" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingVertical="5dp"
                android:visibility="gone"
                android:background="@drawable/bubble_message_shape_right"
                android:orientation="vertical"
                android:id="@+id/message_view_right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Ride assigned"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:paddingRight="10dp"
                    android:paddingLeft="20dp"
                    android:id="@+id/messageTextView_right_header" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="New Ride assigned"
                    android:gravity="center"
                    android:visibility="gone"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    android:paddingRight="10dp"
                    android:paddingLeft="20dp"
                    android:id="@+id/messageTextView_right" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>