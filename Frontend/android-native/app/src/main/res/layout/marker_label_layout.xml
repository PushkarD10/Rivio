<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/map_xml">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Juspay Technologies"
            android:padding="3dp"
            android:elevation="10dp"
            android:background="@drawable/label_shadow"
            android:id="@+id/marker_text"/>
    <LinearLayout android:id="@+id/ll_marker_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/transparent"
        android:gravity="center">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/dest_marker"
            android:id="@+id/pointer_img"/>
    </LinearLayout>

</LinearLayout>