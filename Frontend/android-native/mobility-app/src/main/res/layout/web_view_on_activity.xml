<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/exitWebViewBtn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.juspay.mobility.app.WebViewOnActivity">

    <!-- unique ID of WebView -->
    <WebView
        android:id="@+id/web"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"></WebView>

    <Button
        android:id="@+id/exit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="#043F93"
        android:onClick="goBackToRegistrationScreen"
        android:shadowRadius="2"
        android:text="Exit FLow"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#F1EDED" />
</RelativeLayout>